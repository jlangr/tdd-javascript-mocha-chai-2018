  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run ES6 Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
          "./src/**/*.test.js",
          "--require", "babel-register",
          "--require", "babel-polyfill",
          "-u", "tdd",
          "--timeout", "999999",
          "--colors"
      ],
      "runtimeArgs": [ "--nolazy" ],
      "sourceMaps": true
    }
  ]
}